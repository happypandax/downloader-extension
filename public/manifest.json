{
  "manifest_version": 2,
  "name": "HappyPanda X",
  "version": "1.0.1",
  "description": "A WebExtensions add-on that talks with HappyPanda X from browsers",
  "applications": {
    "gecko": {
      "id": "happypandax@twiddly",
      "update_url": "https://raw.githubusercontent.com/happypandax/extension/master/dist/updates.json"
    }
  },
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "background": {
    "page": "index.html#background"
  },
  "optional_permissions": [
    "webNavigation",
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "menus"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      }
    }
  },
  "browser_action": {
    "default_icon": "logo192.png",
    "default_title": "HappyPanda X Extension",
    "default_popup": "index.html#popup"
  }
}