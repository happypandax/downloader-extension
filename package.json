{
  "name": "hpx-extension",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "fs-extra": "^8.1.0",
    "raw-loader": "^3.1.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "typescript": "^3.6.4",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "publish-major": "react-scripts build && release-it major",
    "publish-minor": "react-scripts build && release-it minor",
    "publish-patch": "react-scripts build && release-it patch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "release-it": "^12.4.3"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "releaseName": "HPX Extension v${version}",
      "release": true,
      "draft": true,
      "assets": [
        "dist/*.xpi"
      ],
      "tokenRef": "TWIDDLY_RELEASES"
    }
  }
}
